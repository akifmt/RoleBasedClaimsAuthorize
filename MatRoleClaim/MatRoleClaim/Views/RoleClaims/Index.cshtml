@model IEnumerable<MatRoleClaim.Models.ViewModels.RoleClaimsViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Roles and Claims</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:10px">
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleDescription)
                </td>
                <td>
                    <ul style="font-size:12px" class="list-group">

                        @foreach (var claim in item.Claims)
                        {
                            <li class="list-group-item py-1 d-flex justify-content-between align-items-center">
                                @string.Format("{0}/{1}", claim.ClaimType, claim.ClaimValue)
                                <span class="badge @(claim.Status ? "badge-success" : "badge-danger") badge-pill">
                                    @claim.Status
                                </span>
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RoleId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RoleId })
                </td>
            </tr>
        }
    </tbody>
</table>
